.main-header
  .title
    = link_to "Blog", root_path, class: "title"
  .search
    = form_with(url:'#', method: :get, local: true, class: "search__form") do |f|
      = f.text_field :keyword,class:'search-field',placeholder: '検索'#,value: @keyword
      = icon('fas', 'search', class: 'search-icon')
  -# .table-content
  -#   .header-article
  -#     新着記事
  -#   .header-rank
  -#     人気の記事
  - if user_signed_in?
    .register
      .new-post
        = link_to "新規投稿", new_post_path, class: "new-post"
      .user-name
        = link_to current_user.nickname, user_path(current_user), class: "user-name"
      .log-out
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "log-out"
      .profile-edit
        = link_to "プロフィール編集", edit_user_path(current_user.id), class: "profile-edit"
      -if current_user.image.present?
        .profile-photo
          = image_tag current_user.image.to_s, size: "60x60", class: 'profile-photo'
      -else
        .profile-photo
  - else
    .register
      .new-register
        = link_to "新規登録", new_user_registration_path, class: "new-register"
      .log-in
        = link_to "ログイン", new_user_session_path, class: "log-in"